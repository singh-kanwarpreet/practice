<% layout('/layout/boilerplate') -%>
<body>
<div class="row ms-0 me-0 mt-3 mb-5 flex-column align-items-center justify-content-center">
<div class="col-md-6">
<h3>Listing Details</h3>
</div>
<div class="card col-md-6 " >
  <img src="<%=data.image%>" class="card-img-top" alt="listing image" style="height: 30vh;">
  <div class="card-body">
    <b class="card-title"><%=data.title%></b>
    <p class="card-text">
    <%=data.description%><br />
    &#8377 <%= data.price.toLocaleString('en-IN') %><br />
    <%=data.location%><br>
    <%=data.country%>
    </p>
    <div class="row ">
    <div class="col-3 pe-0">
    <a href="/listing/<%=data.id%>/update" class="btn  btn-width btn-color ">UPDATE</a>
    </div>
    <div class="col-2 ms-0">
     <form method="post" action="/listing/<%=data.id%>/delete?_method=DELETE">
		<button class="btn btn-dark data-bs-toggle="button"">DELETE</button>
	</form>
	</div>
	</div>
  </div>
</div>
</div>
<br><br>
</body>
